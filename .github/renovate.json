{
  "extends": ["config:base"],
  "terraform": {
    "enabled": true,
    "fileMatch": ["^.*\\.tf$"],
    "ignoreUnstable": true
  },
  "branchConcurrentLimit": 10,
  "prHourlyLimit": 5,
  "packageRules": [
    {
      "matchPackageNames": ["hashicorp/terraform"],
      "groupName": "terraform core updates",
      "rangeStrategy": "widen"
    },
    {
      "matchPackagePatterns": ["^hashicorp/azurerm$", "^hashicorp/random$", "^hashicorp/null$"],
      "groupName": "terraform provider updates",
      "rangeStrategy": "pin",
      "versioning": "semver"
    }
  ]
}
