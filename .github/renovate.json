{
  "extends": ["config:base"],
  "terraform": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchPackagePatterns": ["^azurerm$", "^random$"],
      "rangeStrategy": "bump",   // bump patch one step at a time
      "automerge": false          // optional, keep false if you want PR review
    }
  ]
}
